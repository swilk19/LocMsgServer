<h1>All Messages </h1>
<table>
    <tr>
        <th>Message:<br></th>
        <th>Lat:<br></th>
        <th>Long:<br></th>
    </tr>

    <% @messages.each do |message| %>
        <tr>
            <td><%= message.msg %></td>
            <td><%= message.lat %></td>
            <td><%= message.long %></td>
        </tr>
    <% end %>
</table>
<p>
<%= link_to "New Message", :controller => "messages", :action => "new" %><br>
<%= link_to "Get Messages", :controller => "messages", :action => "find" %>

<div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.email %>.
    <%= link_to "Log out", log_out_path %>
  <% else %>
    <%= link_to "Sign up", sign_up_path %> or
    <%= link_to "log in", log_in_path %>
  <% end %>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>
